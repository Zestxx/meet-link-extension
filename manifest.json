{
  "manifest_version": 3,
  "name": "Meet Link",
  "version": "0.7.1",
  "description": "Meet Link is a simple way to create Google Meet links for your meetings without having to open a meeting in a new tab.",
  "permissions": [
    "tabs",
    "cookies"
  ],
  "host_permissions": [
    "https://*.google.com/*"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; style-src 'self' 'unsafe-inline'"
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Create Meet link",
    "default_icon": {
      "16": "assets/image16.png",
      "32": "assets/image32.png",
      "48": "assets/image48.png",
      "128": "assets/image128.png"
    }
  },
  "icons": {
    "16": "assets/image16.png",
    "32": "assets/image32.png",
    "48": "assets/image48.png",
    "128": "assets/image128.png"
  }
}